<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourPlace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YourPlace.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <style>
        .logoStyle {
            width: 50px;
        }

        .navbar {
            position: absolute;
        }


        .search {
            --padding: 14px;
            width: max-content;
            position: relative;
            display: flex;
            align-items: center;
            padding: var(--padding);
            border-radius: 28px;
            background: #f6f6f6;
            transition: box-shadow 0.25s;
            margin-left: 20px;
        }

            .search:focus-within {
                box-shadow: 0 0 2px rgba(0, 0, 0, 0.75);
            }

        .search-input {
            font-size: 16px;
            font-family: "Lexend", sans-serif;
            color: #333333;
            margin-left: 20px;
            outline: none;
            border: none;
            background: transparent;
            width: 500px;
        }

            .search-input::placeholder,
            .search-icon {
                color: rgba(0, 0, 0, 0.5);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light fixed-top">

            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/Logo.png" class="logoStyle" />
                    YourPlace
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="toMainBg">Начало</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Поверителност</a>
                        </li>
                        <li>

                            <form class="search-container" asp-controller="Home" asp-action="Search">
                                <div class="search">
                                    <span class="search-icon material-symbols-outlined"> search </span>
                                    <input id="serach-input" class="search-input" type="search" placeholder="Search" , autocomplete="off" , name="searchString"></input>
                                </div>
                                <div class="result-box">
                                    <ul id="hotelList">
                                    </ul>
                                </div>

                            </form>
                        </li>
                    </ul>
                    @* <partial name="_FiltersPartial" /> *@
                    <partial name="_LoginPartial" />
                    <partial name="_FiltersPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3" style="min-height: calc(100vh - 100px)">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
